// Color
color-background = #fafafa
color-font = #000
color-meta = #888
color-border = #eee
color-link = #0288d1
color-title = #333

// Font
font-default = "Roboto", "Noto Sans CJK SC", "Helvetica Neue", "Helvetica", Arial, sans-serif
font-serif = "Noto Serif CJK SC", "Georgia", serif
font-mono = "Lucida Console", Consolas, Monaco, Menlo, monospace
font-title = "Roboto", "Noto Sans CJK SC", "Helvetica Neue", "Helvetica", Arial, sans-serif

@import url("//fonts.googleapis.com/css?family=Noto+Sans|Noto+Serif|Roboto")

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 1200px